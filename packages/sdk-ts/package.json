{
  "name": "@x402-platform/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for x402 payments - server middleware and client",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@x402-platform/core": "*",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "express": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ]
}
