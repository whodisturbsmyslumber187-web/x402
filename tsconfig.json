{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@x402-platform/core": ["packages/core/src/index.ts"],
      "@x402-platform/core/*": ["packages/core/src/*"],
      "@x402-platform/sdk": ["packages/sdk-ts/src/index.ts"],
      "@x402-platform/sdk/*": ["packages/sdk-ts/src/*"],
      "@x402-platform/sdk/client": ["packages/sdk-ts/src/client/index.ts"],
      "@x402-platform/sdk/client/types": ["packages/sdk-ts/src/client/types.ts"],
      "@x402-platform/sdk/client/*": ["packages/sdk-ts/src/client/*"],
      "@x402-platform/sdk/server": ["packages/sdk-ts/src/server/index.ts"],
      "@x402-platform/sdk/server/*": ["packages/sdk-ts/src/server/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
